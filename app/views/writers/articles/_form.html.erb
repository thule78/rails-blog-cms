<%= simple_form_for(article) do |f|%>

<% if article.errors.any? %>
<div>
  <ul>
    <% article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-group">
  <%= f.input :title, :placeholder => 'Article Name', class: 'form-control'%>
</div>
     <div class="form-row">
      <div class="offset-sm-2 col-sm-8">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {},
                                     {:class=>'form-check-input mr-1'} do |cb| %>
          <div class="form-check form-check-inline">
            <%= cb.label(class: "form-check-label pr-2") {cb.check_box + cb.text} %>
          </div>
        <% end %>
      </div>
    </div>
<div class="form-group">
  <%= f.input :content, :placeholder => 'Article content', class: 'form-control'%>
</div>
<%= f.submit class: 'btn btn-info' %>
<%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-outline-info' %>
<% end %>

